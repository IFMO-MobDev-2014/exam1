<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.md.exam1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TodoEditActivity"
            android:label="@string/title_todo_edit_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.ifmo.md.exam1.MainActivity" />
        </activity>

        <activity android:name=".LabelsActivity"
            android:label="@string/title_labels_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.ifmo.md.exam1.TodoEditActivity" />
        </activity>

        <provider
            android:authorities="ru.ifmo.md.exam1.todos.contentprovider"
            android:name=".database.TodoProvider"/>

    </application>

</manifest>
